{
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/challenges",
    "rootDir": "./",
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "challenges/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}